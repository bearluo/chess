<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="boyaa_kefu_chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="boyaa_kefu_chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="boyaa_kefu_chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/boyaa_kefu_btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/boyaa_kefu_timestampe_bg</item>
    </style>

    <style name="boyaa_kefu_AnimFade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/boyaa_kefu_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/boyaa_kefu_hold</item>
        <item name="android:activityCloseExitAnimation">@anim/boyaa_kefu_fade_out</item>
    </style>

    <style name="boyaa_kefu_AnimFade2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/boyaa_kefu_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/boyaa_kefu_slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/boyaa_kefu_slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/boyaa_kefu_slide_in_from_left</item>
    </style>

    <style name="boyaa_kefu_AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/boyaa_kefu_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/boyaa_kefu_push_bottom_out</item>
    </style>

    <style name="boyaa_kefu_AnimTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/boyaa_kefu_push_top_in</item>
        <item name="android:windowExitAnimation">@anim/boyaa_kefu_push_top_out</item>
    </style>

    <style name="boyaa_kefu_AnimTop2" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/boyaa_kefu_push_top_in2</item>
        <item name="android:windowExitAnimation">@anim/boyaa_kefu_push_top_out2</item>
    </style>

    <style name="boyaa_kefu_AnimHead" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/boyaa_kefu_head_in</item>
        <item name="android:windowExitAnimation">@anim/boyaa_kefu_head_out</item>
    </style>

    <style name="boyaa_kefu_Anim_style" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/boyaa_kefu_AnimFade</item>
    </style>

    <style name="boyaa_kefu_Anim_style2" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/boyaa_kefu_AnimFade</item>
    </style>

    <style name="boyaa_kefu_horizontal_slide" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/boyaa_kefu_AnimFade2</item>
    </style>
    
    <style name="boyaa_kefu_nornal_style" parent="android:Theme.NoTitleBar"></style>

