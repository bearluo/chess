<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical" 
    android:background="@color/boyaa_kefu_top_bar_vip_bg">

     <LinearLayout
         android:layout_width="100dip"
         android:layout_height="match_parent"
         android:background="@drawable/boyaa_kefu_common_tab_bg"
         android:clickable="true"
         android:onClick="back"
         android:orientation="horizontal" >

         <ImageView
             android:id="@+id/boyaa_kefu_top_title_back_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="13dp"
             android:scaleType="centerInside"
             android:background="@drawable/boyaa_kefu_title_vip_back" />

         <TextView
             android:id="@+id/boyaa_kefu_top_title_back_txt"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="5dp"
             android:text="@string/boyaa_kefu_title_back"
             android:textColor="#f4c392"
             android:textSize="15sp" />
     </LinearLayout>

     <TextView
         android:id="@+id/boyaa_kefu_top_title_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:text="@string/boyaa_kefu_chat_vip_title"
         android:textColor="#f4c392"
         android:textSize="17sp" />

</RelativeLayout>    

