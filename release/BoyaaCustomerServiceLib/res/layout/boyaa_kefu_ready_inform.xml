<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
          android:id="@+id/boyaa_kefu_inform_item"
          layout="@layout/boyaa_kefu_ready_inform_input_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/boyaa_kefu_id_inform_content_layout"
        android:layout_below="@id/boyaa_kefu_inform_item"
        android:layout_height="90dp"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/boyaa_kefu_id_inform_content"
            android:textSize="15sp"
            android:background="@null"
            android:ems="10"
            android:gravity="top|left"
            android:minLines="4"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:textColor="#000000"
            android:textColorHint="#c3c3c3"
            android:hint="@string/boyaa_kefu_picker_informcontents_describe"/>

    </RelativeLayout>
    
    <View
        android:id="@+id/boyaa_kefu_separate_line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/boyaa_kefu_id_inform_content_layout"
        android:background="#C0C0C0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/boyaa_kefu_id_screenshot"
        android:layout_below="@id/boyaa_kefu_separate_line3"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/boyaa_kefu_id_pick_picture_btn"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:background="@drawable/boyaa_kefu_panel_pic_icon_selector"
            android:contentDescription="@string/boyaa_kefu_imageview_content_description"/>

        <TextView
            android:id="@+id/boyaa_kefu_id_pick_picture_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="36dp"
            android:layout_toRightOf="@id/boyaa_kefu_id_pick_picture_btn"
            android:layout_alignBottom="@id/boyaa_kefu_id_pick_picture_btn"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="@string/boyaa_kefu_picker_picture_describe"/>
        
        <!-- <ImageView
            android:id="@+id/boyaa_kefu_id_picture_show"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/> -->

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/boyaa_kefu_id_screenshot_picture"
        android:layout_below="@id/boyaa_kefu_separate_line3"
        android:visibility="gone"
        android:layout_height="282dip">

        <ImageView
            android:id="@+id/boyaa_kefu_id_picture_show"
            android:contentDescription="@string/boyaa_kefu_contentdescrip_inform"
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    
    <Button
        android:id="@+id/boyaa_kefu_id_inform_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#fefefe"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boyaa_kefu_submit_click"
        android:text="@string/boyaa_kefu_picker_inform_submit"/>

</RelativeLayout>
