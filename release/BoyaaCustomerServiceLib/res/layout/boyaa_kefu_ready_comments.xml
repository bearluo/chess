<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


        <include
            android:id="@+id/boyaa_kefu_id_comment_layout"
            layout="@layout/boyaa_kefu_comment_details" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/boyaa_kefu_id_screenshot_comment"
        android:layout_below="@id/boyaa_kefu_id_comment_layout"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/boyaa_kefu_id_pick_picture_btn_comment"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:background="@drawable/boyaa_kefu_panel_pic_icon_selector"
            android:contentDescription="@string/boyaa_kefu_imageview_content_description"/>

        <TextView
            android:id="@+id/boyaa_kefu_id_pick_picture_tip_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="36dp"
            android:layout_toRightOf="@id/boyaa_kefu_id_pick_picture_btn_comment"
            android:layout_alignBottom="@id/boyaa_kefu_id_pick_picture_btn_comment"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="@string/boyaa_kefu_picker_picture_describe_comment"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/boyaa_kefu_id_screenshot_picture_comment"
        android:layout_below="@id/boyaa_kefu_id_comment_layout"
        android:visibility="gone"
        android:layout_height="282dip">

        <ImageView
            android:id="@+id/boyaa_kefu_id_picture_show_comment"
            android:contentDescription="@string/boyaa_kefu_contentdescrip_comment"
            android:layout_marginTop="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <Button
        android:id="@+id/boyaa_kefu_id_comment_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boyaa_kefu_voice_rcd_btn_pressed"
        android:text="@string/boyaa_kefu_comment_submit"
        android:textColor="#fefefe"
        android:textSize="17sp" />

</RelativeLayout>