<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:background="@drawable/boyaa_kefu_voice_rcd_hint_bg"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/appkefu_voice_record_hint_layout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/appkefu_voice_record_hint_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36.5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/appkefu_imageview_content_description"
            android:src="@drawable/boyaa_kefu_voice_rcd_hint" />

        <ImageView
            android:id="@+id/appkefu_voice_record_hint_amp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:contentDescription="@string/appkefu_imageview_content_description"
            android:src="@drawable/boyaa_kefu_voice_rcd_hint_amp1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appkefu_voice_record_hint_text_record_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appkefu_voice_record_hint_layout"
        android:layout_marginLeft="11dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center_horizontal"
        android:layout_marginRight="11dp">

        <TextView
            android:id="@+id/appkefu_voice_record_hint_record_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appkefu_record_voice_hint_record"
            android:paddingBottom="10dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appkefu_voice_record_hint_cancel_layout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="42dp"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/appkefu_voice_record_hint_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/appkefu_imageview_content_description"
            android:src="@drawable/boyaa_kefu_rcd_cancel_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appkefu_voice_record_hint_text_cancel_layout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appkefu_voice_record_hint_cancel_layout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:gravity="center_horizontal|bottom"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/appkefu_voice_record_hint_cancel_textview"
            android:layout_width="116dp"
            android:layout_height="19dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/boyaa_kefu_text_view_border_voice_cancel"
            android:text="@string/appkefu_record_voice_hint_cancel" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/appkefu_voice_record_hint_short_layout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/appkefu_voice_record_hint_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/appkefu_imageview_content_description"
            android:src="@drawable/boyaa_kefu_rcd_tooshort_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appkefu_voice_record_hint_text_short_layout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appkefu_voice_record_hint_short_layout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:visibility="invisible"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/appkefu_voice_record_hint_short_textview"
            android:layout_width="116dp"
            android:layout_height="19dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="@string/appkefu_record_voice_too_short" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/appkefu_voice_record_hint_long_layout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/appkefu_voice_record_hint_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/appkefu_imageview_content_description"
            android:src="@drawable/boyaa_kefu_rcd_tooshort_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appkefu_voice_record_hint_text_long_layout"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appkefu_voice_record_hint_short_layout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:visibility="invisible"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/appkefu_voice_record_hint_long_textview"
            android:layout_width="116dp"
            android:layout_height="19dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="@string/appkefu_record_voice_too_long" />
    </LinearLayout>
    

</RelativeLayout>